<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/foto_fondo_2"
    tools:context=".Act1PuzzleActivity"    >

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="20sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100sp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#00008B"
                android:textSize="40sp"
                android:text="@string/lekeitioko_eliza"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500sp"
            android:layout_marginBottom="30sp"
            android:orientation="vertical"
            android:padding="20sp"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="5sp">
                <LinearLayout
                    android:id="@+id/esp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="110sp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5sp"
                        android:src="@drawable/puzzle_img_7"
                        android:onClick="imagen1"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/esp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="110sp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5sp"
                        android:onClick="imagen2"
                        android:src="@drawable/puzzle_img_4" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/esp3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img3"
                        android:layout_width="110sp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/puzzle_img_1"
                        android:onClick="imagen3"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="5sp">
                <LinearLayout
                    android:id="@+id/esp4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img4"
                        android:layout_width="110sp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5sp"
                        android:src="@drawable/puzzle_img_3"
                        android:onClick="imagen4"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/esp5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img5"
                        android:layout_width="110sp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5sp"
                        android:src="@drawable/puzzle_img_5"
                        android:onClick="imagen5"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/esp6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img6"
                        android:layout_width="110sp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/puzzle_img_9"
                        android:onClick="imagen6"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <LinearLayout
                    android:id="@+id/esp7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img7"
                        android:layout_width="110sp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5sp"
                        android:src="@drawable/puzzle_img_8"
                        android:onClick="imagen7"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/esp8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img8"
                        android:layout_width="110sp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/puzzle_img_2"
                        android:layout_marginEnd="5sp"
                        android:onClick="imagen8"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/esp9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img9"
                        android:layout_width="110sp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/puzzle_img_6"
                        android:onClick="imagen9"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnMapa"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:text="@string/jarraitu"
            android:backgroundTint="#00008B"
            android:onClick="siguiente"/>
    </LinearLayout>


</RelativeLayout>