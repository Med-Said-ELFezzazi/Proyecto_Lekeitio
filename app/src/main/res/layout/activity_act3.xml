<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Act3Activity"
    android:background="@drawable/foto_fondo_2"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actividad 3"
        android:layout_gravity="center"
        android:textSize="35sp"
        android:layout_marginTop="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="San Pedro 'Kaxarranka'"
        android:layout_gravity="center"
        android:textStyle="italic"
        android:layout_marginTop="5sp" />

    <TextView
        android:layout_width="361dp"
        android:layout_height="342dp"
        android:layout_gravity="center"
        android:layout_marginTop="35sp"
        android:text="El festival local 'San Pedro Kaxarranka' es un evento cultural único, donde se celebra una danza tradicional sobre un arca de pescadores, simbolizando la historia y la comunidad del pueblo. La naturaleza se muestra en todo su esplendor en la isla de San Nicolás, un pequeño paraíso accesible solo durante la marea baja.
        \n La gastronomía local es un reflejo del mar, con platos de pescado fresco y pintxos que deleitan a los visitantes con su autenticidad y sabor."
        android:textSize="20dp"
        android:textStyle="italic"
        android:textColor="@color/black"/>

<!--
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnPlayAudio"
        android:layout_gravity="center"
        android:layout_marginTop="40sp"
        android:text="Play"
        android:onClick="playAudio"/>  -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgPlayAudio"
            android:layout_width="78dp"
            android:layout_height="60dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:onClick="playAudio"
            android:src="@drawable/play_debujo" />


        <SeekBar
            android:id="@+id/seekBarAudio"
            style="@style/CustomSeekBarStyle"
            android:layout_width="0dp"
            android:layout_height="66dp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnSiguienteVideo"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="pasarAlVideo"
        android:text="Siguiente"
        android:layout_marginTop="-100dp"/>



</LinearLayout>