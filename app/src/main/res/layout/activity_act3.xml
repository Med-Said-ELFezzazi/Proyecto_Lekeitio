<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Act3Activity">

    <!-- Imagen de fondo -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/foto_fondo_2"
        android:scaleType="centerCrop"/>

    <!-- View para oscurecer el fondo -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"/> <!-- Color negro con opacidad, ajusta según necesidad -->

    <!-- Contenido principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAN PEDRO KAXARRANKA"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:textColor="#03A9F4"
            android:layout_marginTop="10sp"
            android:textStyle="bold"
            android:layout_marginBottom="50sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="331dp"
            android:layout_gravity="center"
            android:background="@drawable/borders"
            android:orientation="vertical">

            <!-- El texto describe el festival 'San Pedro Kaxarranka', su danza tradicional y la isla de San Nicolás, así como la gastronomía local basada en pescado y pintxos.-->
            <TextView
                android:layout_width="361dp"
                android:layout_height="330dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Bertako 'San Pedro Kaxarranka' kultur ekitaldi paregabea da, non arrantzaleen arkaren gainean dantza tradizionala ospatzen den, herriko historia eta komunitatea sinbolizatuz. Natura bere distira guztian ageri da San Nikolas uhartean, itsasbeheran soilik eskura daitekeen paradisu txiki batean.
         \nBertako gastronomia itsasoaren isla da, arrain fresko platerekin eta bisitariak jatortasunarekin eta zaporearekin gozatzen dituzten pintxoekin."
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="-5dp"
            android:layout_marginTop="10dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/currentTimeTextView"
                    android:layout_width="61dp"
                    android:layout_height="90dp"
                    android:gravity="center"
                    android:text="0:00"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <SeekBar
                    android:id="@+id/seekBarAudio"
                    style="@style/CustomSeekBarStyle"
                    android:layout_width="260dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="20sp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/totalTimeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="61dp"
                    android:text="0:00"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="393dp"
            android:layout_height="81dp"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imgPlayAudio"
                android:layout_width="186dp"
                android:layout_height="81dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="34dp"
                android:onClick="playAudio"
                android:src="@drawable/play_debujo" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_gravity="top"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Siguiente-->
            <Button
                android:id="@+id/btnSiguienteVideo"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:text="Jarraian"
                android:backgroundTint="#03A9F4"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
