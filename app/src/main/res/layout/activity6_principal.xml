<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/foto_fondo_2"
    android:padding="16dp">

    <TextView
        android:id="@+id/textview_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MARIA DIAZ DE HARO"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#03A9F4"
        android:textSize="24sp"
        android:padding="16dp" />

    <!-- Botones para controlar la reproducciÃ³n del audio -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/textview_titulo"
        android:id="@+id/layoutBtnAudio"
        android:gravity="center">

        <Button
            android:id="@+id/button_play_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#03A9F4"
            android:layout_marginRight="10dp"
            android:text="Reproducir" />

        <Button
            android:id="@+id/button_pause_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#03A9F4"
            android:layout_marginRight="10dp"
            android:text="Parar" />

        <Button
            android:id="@+id/button_stop_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#03A9F4"
            android:text="Empezar de 0" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutBtnAudio" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/borders"
        android:layout_marginTop="10dp"
        android:padding="10sp"
        android:orientation="vertical"
        android:layout_below="@id/seekBar"
        android:id="@+id/layoutTexto">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/act6Persona1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/act6Persona2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/act6Persona3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/act6Persona4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/act6Persona5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/act6Persona6"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnSopaDeLetras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siguiente"
        android:layout_below="@id/layoutTexto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:backgroundTint="#03A9F4"
        android:enabled="false" />

</RelativeLayout>
