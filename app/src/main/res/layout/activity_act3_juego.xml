<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Act3Activity">

    <!-- Imagen de fondo -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/foto_fondo_2"
        android:scaleType="centerCrop"/>

    <!-- View para oscurecer el fondo -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"/> <!-- Color negro con opacidad, ajusta segÃºn necesidad -->

    <!-- Contenido principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="71dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="30dp"
                android:text="Hautatu zuzena"
                android:textColor="#00008B"
                android:textSize="40sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNumPregunta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="1. Galdera"
                android:textColor="#00008B"
                android:textSize="35dp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/cuadradoVacio"
                android:layout_width="356dp"
                android:layout_height="122dp"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:background="@drawable/borde_cuadrado"
                android:gravity="center"
                android:inputType="textMultiLine"
                android:padding="0dp"
                android:textColor="@color/azul"></EditText>

        </LinearLayout>

        <!-- Images-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="158dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/layoutImg1"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:padding="4dp"
                android:layout_marginRight="15dp">

                <ImageView
                    android:id="@+id/imagen1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:onClick="imagenSeleccionada"
                    android:src="@drawable/trombon" />
            </LinearLayout>


            <LinearLayout
                android:padding="4dp"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:id="@+id/layoutImg2"
                android:layout_marginLeft="15dp"
                >

                <ImageView
                    android:id="@+id/imagen2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:onClick="imagenSeleccionada"
                    android:src="@drawable/pandereta" />
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="138dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layoutImg3"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:layout_marginRight="15dp"
                android:padding="4dp"

                >

                <ImageView
                    android:id="@+id/imagen3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:onClick="imagenSeleccionada"
                    android:src="@drawable/violin" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layoutImg4"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:layout_marginLeft="15dp"
                android:padding="4dp">


                <ImageView
                    android:id="@+id/imagen4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:onClick="imagenSeleccionada"
                    android:src="@drawable/silbido" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="133dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_marginBottom="10dp"
                android:id="@+id/txtFotoseleccionada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnSiguiente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="55dp"
                android:backgroundTint="#00008B"
                android:text="@string/jarraitu" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

