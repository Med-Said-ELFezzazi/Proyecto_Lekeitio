<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#9CDCFB"
    android:padding="8sp">

    <!-- sp para q se adapte a la pantalla -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <!--
        <ImageView
            android:id="@+id/logo"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@mipmap/ic_barco_trans_round" /> -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/patrimonio_lekeitio"
            android:textSize="35sp"
            android:textColor="@color/black"/>

        <!--
        <ImageView
            android:id="@+id/logo2"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@mipmap/ic_barco_trans_round" /> -->

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="500sp"
        android:src="@drawable/logo_barco" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="20sp">

        <Button
            android:id="@+id/btnIniciar"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:backgroundTint="#0776AE"
            android:onClick="iniciar"
            android:text="Hasiera"
            android:textSize="35sp"
            android:textAlignment="center"/>

    </LinearLayout>

    <TextView
        android:id="@+id/lblAutores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Joseba , Mohamed, Jonathan"
        android:textAlignment="center" />

</LinearLayout>