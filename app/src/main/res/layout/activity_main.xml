<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/foto_fondo_2">

    <!-- sp para q se adapte a la pantalla -->

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/patrimonio_lekeitio"
                android:textColor="#03A9F4"
                android:textSize="35dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold" />
        </LinearLayout>
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="500sp"
            android:src="@drawable/barco_gif"
            tools:ignore="MissingClass" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20sp" >

            <Button
                android:id="@+id/btnIniciar"
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:backgroundTint="#03A9F4"
                android:onClick="iniciar"
                android:text="Hasiera"
                android:textSize="35sp"
                android:textAlignment="center"/>

        </LinearLayout>

        <TextView
            android:id="@+id/lblAutores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hecho por: Joseba , Mohamed Said, Jonathan"
            android:backgroundTint="#03A9F4"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginTop="110dp"/>
    </LinearLayout>
</RelativeLayout>