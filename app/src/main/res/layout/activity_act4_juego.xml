            android:layout_height="wrap_content"
            android:text="Gizonezkoak lanbidea da."
            android:textColor="#000000"
            android:gravity="center"
            android:padding="7dp"
            android:textSize="18dp"
            android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout
